@model IEnumerable<Category>
@{
    ViewData["Title"] = "Index";
}

<h1>Index Category</h1>

<table class="table table-bordered table-striper" style="width:100%">
    <thead>
        <tr>
            <th>
                Category name
            </th>
            <th>
                Display order
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var category in Model)
        {
            <tr>
                <td width="50%">
                    @category.Name
                </td>
                <td width="50%">
                    @category.DisplayOrder
                </td>
            </tr>
        }
    </tbody>
</table>

