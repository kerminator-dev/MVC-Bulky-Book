@model IEnumerable<Category>
@{
    ViewData["Title"] = "Index";
}

<partial name="_Notification" />

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Category List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Category" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> &nbsp; Create New Category
            </a>
        </div>
    </div>
    <br/>


<table class="table table-bordered table-striper" style="width:100%">
    <thead>
        <tr>
            <th>
                Category name
            </th>
            <th>
                Display order
            </th>
            <th>
                Created date
            </th>
            <th>
                
            </th>
            <th>

            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var category in Model)
        {
            <tr>
                <td width="30%">
                    @category.Name
                </td>
                <td width="30%">
                    @category.DisplayOrder
                </td>
                <td width="30%">
                    @category.CreatedDate
                </td>
                <td>
                    <div class="w-75 btn-group" role="group">
                            <a asp-controller="Category" asp-action="Update" asp-route-id="@category.Id"
                            class="btn btn-primary mx-2">
                                <i class="bi bi-pencil-square"></i></a>
                    </div>
                </td>
                    <td>
                        <div class="w-75 btn-group" role="group">
                            <a asp-controller="Category" asp-action="Delete" asp-route-id="@category.Id"
                           class="btn btn-danger mx-2">
                                <i class="bi bi-trash3-fill"></i>
                            </a>
                        </div>
                    </td>
            </tr>
        }
    </tbody>
</table>

</div>